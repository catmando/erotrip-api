									.person-status.away
									%h3.text-white.text-book.mb-0 Ola, 18
								.profile-info-lower
									%span.text-white 2 dni temu,
									%span.text-white Poznań
						%button.btn.icon-only.btn-dark-bar(type="button")
							%i.ero-settings

				.profile-gallery.streach-me
					.profile-gallery-inner
						= image_tag('girl-gallery.jpg', class: "img-fit")

						.action-buttons
							%button.btn.icon-only.btn-small-dark.left(type="button")
								%i.ero-users.f-s-15
							%button.btn.icon-only.btn-small-dark.right(type="button")
								%i.ero-trash.f-s-18
							%button.btn.icon-only.btn-small-dark.left(type="button")
								%i.ero-locker.f-s-20

				.profile-photos-bar.streach-me
					.profile-photos-bar-inner.ea-flex
						%a.add-photo.no-underline-i(href="")
							%i.ero-camera.f-s-30.text-white
							.f-s-12.text-white.mt-1 Dodaj zdjęcie
						%a.verification.no-underline-i(href="")
